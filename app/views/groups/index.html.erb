<p id="notice"><%= notice %></p>



<h1>Listing Groups</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @groups.each do |group| %>
      <tr>
        <td><%= group.value[0] %></td>
        <td><%= group.value[1] %></td>
        <td><%= link_to 'Show', group_path(group.key) %></td>
        <td><%= link_to 'Edit', edit_group_path(group.key) %></td>
        <td><%= link_to 'Destroy', group_path(group.key), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
<%= link_to 'Create PDF', pdf_generator_groups_path %>
<%= link_to 'Search', search_group_groups_path %>
